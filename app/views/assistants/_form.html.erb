<%= form_for(@assistant) do |f| %>
  <% if @assistant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@assistant.errors.count, "error") %> prohibited this assistant from being saved:</h2>

      <ul>
      <% @assistant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select :gender, options_for_select([['Female', 'F'], ['Male', 'M']]) %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :mobile %><br>
    <%= f.telephone_field :mobile %>
  </div>
  <div class="field">
    <%= f.label :salary %><br>
    <%= f.text_field :salary, :value => (number_to_currency(f.object.salary, :precision => 2) || 0) %>
  </div>
  <div class="field">
    <%= f.label :id_bus %><br>
    <%= f.select :id_bus, options_for_select(Bus.all.map{|s|[s.plate,s.id]}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
