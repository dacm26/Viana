<BR>
<div lass="container">
<div class="row centered">
	<div class="col-lg-8 col-lg-offset-2">
    <%= form_for(@driver) do |f| %>
      <% if @driver.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@driver.errors.count, "error") %> prohibited this assistant from being saved:</h2>

      <ul>
      <% @driver.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-sm-10">
      <h2 for="inputEmail3" class="col-sm-8 col-lg-offset-4 control-label"><strong>Add a Driver</strong></h2>
    </div>
  </div>
    
  
  <div class="form-group">
    <div class="col-sm-10">
      <label for="inputEmail3" class="col-sm-2 col-lg-offset-2 control-label"><i class="fa fa-user"></i></label>
      <%= f.email_field :email, :autofocus => true, placeholder: 'Email',class:'col-sm-8', id: 'inputEmail3' %>
    </div>
  </div>
  
    <div class="form-group">
    <div class="col-sm-10">
      <label for="inputEmail3" class="col-sm-2 col-lg-offset-2 control-label"><i class="fa fa-dot-circle-o"></i></label>
      <%= f.text_field :name, :autofocus => true, placeholder: 'Name',class:'col-sm-8', id: 'inputEmail3' %>
    </div>
  </div>
  
   <div class="form-group">
    <div class="col-sm-10">
      <label for="inputEmail3" class="col-sm-2 col-lg-offset-2 control-label"><i class="fa fa-sort-numeric-asc"></i></label>
      <%= f.number_field :age, :autofocus => true, placeholder: 'Age',class:'col-sm-8', id: 'inputEmail3' %>
    </div>
  </div>
   
  <div class="form-group">
    <div class="col-sm-10">
      <label for="inputEmail3" class="col-sm-2 col-lg-offset-2 control-label"><i class="fa fa-minus-square"></i></label>
      <div><%= f.select :gender, options_for_select([['Female', 'F'], ['Male', 'M']]) %></div>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-sm-10">
      <label for="inputEmail3" class="col-sm-2 col-lg-offset-2 control-label"><i class="fa fa-sitemap"></i></label>
      <%= f.text_area :address, :autofocus => true, placeholder: 'Address',class:'col-sm-8', id: 'inputEmail3' %>
    </div>
  </div>
  
    <div class="form-group">
    <div class="col-sm-10">
      <label for="inputEmail3" class="col-sm-2 col-lg-offset-2 control-label"><i class="fa fa-mobile"></i></label>
      <%= f.telephone_field :mobile, :autofocus => true, placeholder: 'Mobile',class:'col-sm-8', id: 'inputEmail3' %>
    </div>
  </div>

   <div class="form-group">
    <div class="col-sm-10">
      <label for="inputEmail3" class="col-sm-2 col-lg-offset-2 control-label"><i class="fa fa-usd"></i></label>
      <%= f.text_field :salary, :value => (number_to_currency(f.object.salary, :precision => 2) || 0) , :autofocus => true, placeholder: 'Salary',class:'col-sm-8', id: 'inputEmail3' %>
    </div>
  </div>
    
  <div class="form-group">
    <div class="col-sm-10">
      <label for="inputEmail3" class="col-sm-2 col-lg-offset-2 control-label"><i class="fa fa-shopping-cart"></i></label>
      <%= f.select :id_bus, options_for_select(Bus.all.map{|s|[s.plate,s.id]}) %>
    </div>
  </div>    

    <div class="form-group">
    <div class="col-sm-10">
        <div><%= f.submit "Add a Driver" ,class:'col-sm-2 col-sm-offset-7'%><BR>
      </div>
      
    </div>
  </div>
  
<% end %>


    
    </div>
  </div><!-- row -->
</div>
