<div lass="container">
<div class="row centered">
<div class="col-lg-8 col-lg-offset-2">
<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th class="danger">Seat category</th>
      <th class="danger">Customer category</th>
      <th class="danger">Origin city</th>
      <th class="danger">Destiny city</th>
      <th class="danger">Price (viceversa)</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        
        <td><%= Seatcategory.find(ticket.seat_category).name %></td>
        <td><%= Customercategory.find(ticket.customer_category).name %></td>
        <td><%= City.find(ticket.origin_city).name %></td>
        <td><%= City.find(ticket.destiny_city).name %></td>
        <td>$<%= ticket.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

